{
  "files": [],
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./node_modules/element-plus/types", "./node_modules"],
    "types": ["element-plus"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@modules/*": ["src/modules/*"],
      "@core/*": ["src/modules/core/*"],
      "@character/*": ["src/modules/character/*"],
      "@world/*": ["src/modules/world/*"],
      "@toolbox/*": ["src/modules/toolbox/*"],
      "@pages/*": ["src/pages/*"],
      "@router/*": ["src/router/*"],
      "@styles/*": ["src/styles/*"]
    },
    "lib": ["es2024", "dom", "esnext"]
  },
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
